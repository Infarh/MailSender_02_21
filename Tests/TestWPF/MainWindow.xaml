<Window x:Class="TestWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWPF"
        xmlns:vm="clr-namespace:TestWPF.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="412" Width="770">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Slider Margin="5" VerticalAlignment="Top" Minimum="0" Maximum="600"
                Name="Translator"/>

        <Ellipse Width="50" Height="50" Fill="Blue" Margin="29,53,691,293">
            <Ellipse.RenderTransform>
                <TranslateTransform X="{Binding Value, ElementName=Translator}"/>
            </Ellipse.RenderTransform>
        </Ellipse>
        <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" 
                 VerticalAlignment="Top" HorizontalAlignment="Left"
                 Margin="15,30,0,0" Width="155"/>
    </Grid>
</Window>
